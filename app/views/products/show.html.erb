<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="max-w-lg mx-auto bg-white rounded-lg shadow-md overflow-hidden">
    <% if @product.photo.attached? %>
      <div class="flex justify-center">
        <%= image_tag @product.photo, class: "w-full h-64 object-cover" %>
      </div>
    <% end %>

    <div class="p-6 text-center">
      <h1 class="text-2xl font-semibold text-teal-600"><%= @product.title %></h1>

      <p class="mt-3 text-gray-700"><%= @product.description %></p>

      <span class="block mt-4 text-xl font-bold text-gray-800"><%= @product.price %>$</span>

      <div class="mt-6 flex justify-center space-x-4">
        <% if @product.owner? %>
          <%= link_to t('.edit'), edit_product_path(@product), class: "text-blue-500 hover:text-blue-700" %>
          <%= link_to t('.delete'), product_path(@product), data: { turbo_method: :delete, turbo_confirm: t('common.confirm') }, class: "text-red-500 hover:text-red-700" %>
        <% end %>
        <%= link_to t('.view_more_products', username: @product.user.username), user_path(@product.user.username), class: "text-teal-500 hover:text-teal-700" %>
      </div>

      <div class="mt-4 flex justify-center">
        <%= render partial: 'favorite', locals: { product: @product } %>
      </div>
    </div>
  </div>
</div>
