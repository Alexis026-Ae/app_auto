<li id="<%= dom_id category %>" class="flex items-center justify-between py-4">
  <span class="text-gray-800 font-medium"><%= category.name %></span>
  <div class="flex space-x-4">
    <%= link_to t('.edit'), edit_category_path(category), class: "text-blue-500 hover:text-blue-700" %>
    <%= link_to t('.delete'), category_path(category), data: { turbo_method: :delete, turbo_confirm: t('common.confirm') }, class: "text-red-500 hover:text-red-700" %>
  </div>
</li>
