<% if alert || notice %>
  <% color = alert ? 'bg-red-500' : 'bg-green-500' %>
  <div class="fixed top-0 inset-x-0 m-4 z-30 pointer-events-none">
    <div class="flex flex-col items-end space-y-4">
      <div data-controller="alert" data-alert-dismiss-after-value="1500" data-alert-show-class="translate-y-0 opacity-100" data-alert-hide-class="translate-y-full opacity-0" class="transform transition ease-in-out duration-500 max-w-sm w-full shadow-xl rounded-lg px-4 py-3 relative <%= color %> text-white pointer-events-auto translate-y-0 opacity-100">
        <div class="p-2">
          <div class="flex items-center">
            <!-- Icono de advertencia o check -->
            <div class="flex-shrink-0">
              <% if alert %>
                <svg class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M12 2a10 10 0 100 20 10 10 0 000-20z"/>
                </svg>
              <% else %>
                <svg class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                </svg>
              <% end %>
            </div>
            <!-- Mensaje de alerta o éxito -->
            <div class="ml-3 w-0 flex-1 pt-0.5">
              <p class="text-sm font-semibold">
                <%= alert || notice %>
              </p>
            </div>
            <!-- Botón de cierre -->
            <div class="ml-4 flex-shrink-0 flex">
              <button data-action="alert#close" class="inline-flex text-white focus:outline-none hover:text-gray-300 transition ease-in-out duration-150">
                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
